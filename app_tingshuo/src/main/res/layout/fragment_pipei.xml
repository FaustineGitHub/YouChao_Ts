<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_swipe_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >
    <TextView
        android:id="@+id/tv_pipei_title"
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:text="推荐翻译"
        android:background="@color/white"
        android:gravity="center"
        android:textColor="@color/black_222"
        android:textSize="28px"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_pipei"
        android:layout_below="@id/tv_pipei_title"
        android:layout_width="match_parent"
        android:paddingBottom="20dp"
        android:layout_height="450dp">
    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20px"
        android:layout_alignBottom="@id/rv_pipei"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/iv_love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chacha"
            android:layout_marginRight="30px"
            />

        <ImageView
            android:id="@+id/iv_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:src="@drawable/liaotiao"
            />
    </LinearLayout>

</RelativeLayout>