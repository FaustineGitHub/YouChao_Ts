<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_shouye_tuijian"
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/tv_tuijian_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="耳朵推荐"
            android:layout_marginLeft="24px"
            android:textColor="@color/black_222"
            android:layout_centerVertical="true"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/id_recyclerview_tuijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30px"
            android:layout_toLeftOf="@+id/iv_tuijian"
            android:layout_centerVertical="true"
            android:scrollbars="none"
            ></android.support.v7.widget.RecyclerView>

        <ImageView
            android:id="@+id/iv_tuijian"
            android:layout_width="15px"
            android:layout_height="33px"
            android:src="@drawable/right_blue"
            android:layout_marginRight="30px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</LinearLayout>