<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/content"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_login"
        android:scaleType="fitXY"
        />
            <ImageView
                android:id="@+id/iv_login_icon"
                android:layout_width="188px"
                android:layout_height="188px"
                android:src="@drawable/login_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="160px"/>
            <RelativeLayout
                android:id="@+id/logim_rl_account"
                android:layout_width="match_parent"
                android:layout_below="@id/iv_login_icon"
                android:layout_height="96px"
                android:layout_marginLeft="60px"
                android:layout_marginRight="60px"
                android:layout_marginTop="102px"
                >
                <EditText
                    android:id="@+id/login_et_account"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_edit"
                    android:drawableLeft="@drawable/name"
                    android:drawablePadding="40px"
                    android:paddingLeft="40px"
                    android:gravity="center_vertical"
                    android:hint="请输入手机号/昵称/邮箱"
                    android:text=""
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="32px"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/logim_rl_password"
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:layout_below="@id/logim_rl_account"
                android:layout_marginLeft="60px"
                android:layout_marginRight="60px"
                android:layout_marginTop="24px"
                >
                <ImageView
                    android:id="@+id/iv_password_state"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="12px"
                    android:paddingRight="12px"
                    android:src="@drawable/ic_eye_close"
                    android:visibility="gone"
                    />
                <ImageView
                    android:id="@+id/iv_password_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/iv_password_state"
                    android:paddingLeft="12px"
                    android:paddingRight="12px"
                    android:visibility="gone"
                    android:src="@drawable/ic_close_grey"
                    />
            <EditText
                android:id="@+id/login_et_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_edit"
                android:layout_toLeftOf="@id/iv_password_clear"
                android:drawableLeft="@drawable/mima"
                android:drawablePadding="40px"
                android:paddingLeft="40px"
                android:gravity="center_vertical"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:text=""
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="32px"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="92px"
            android:layout_below="@id/logim_rl_password"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:layout_marginTop="62px"
            android:background="@drawable/bg_text"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="32px"/>
            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_login"
                android:layout_marginLeft="120px"
                android:layout_marginTop="40px"
                android:text="注册"
                android:textColor="@color/white"
                android:textSize="24px"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/tv_forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_login"
                android:layout_marginRight="120px"
                android:layout_marginTop="40px"
                android:text="忘记密码"
                android:textColor="@color/white"
                android:textSize="24px"
                android:visibility="visible"/>
            <RelativeLayout
                android:id="@+id/rl_other_title"
                android:layout_marginTop="30px"
                android:layout_above="@+id/sanfang"
                android:layout_width="match_parent"
                android:layout_below="@id/tv_forget_password"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="第三方账号登录"
                    android:textColor="@color/white"
                    android:textSize="32px" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@+id/tv_other"
                    android:layout_toStartOf="@+id/tv_other"
                    android:background="#e0e0e0" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@+id/tv_other"
                    android:background="#e0e0e0" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/sanfang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="40px"
                android:layout_marginBottom="20px"
                android:weightSum="3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/iv_sina_login"
                        android:layout_width="88px"
                        android:layout_height="88px"
                        android:layout_marginLeft="30px"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/icn_wechat" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/iv_wx_login"
                        android:layout_width="88px"
                        android:layout_height="88px"

                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/icn_weibo_1" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/iv_qq_login"
                        android:layout_width="88px"
                        android:layout_height="88px"
                        android:layout_marginBottom="20px"
                        android:layout_marginRight="30px"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/icn_qq" />
                </LinearLayout>
            </LinearLayout>

</RelativeLayout>