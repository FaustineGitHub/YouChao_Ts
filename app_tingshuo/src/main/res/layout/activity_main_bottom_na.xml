<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.youchao.tingshuo.view.ChildClickableLinearLayout
        android:id="@+id/bg_zhibo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottomshouye"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/title_shouye"
            android:layout_weight="1" />
    </com.youchao.tingshuo.view.ChildClickableLinearLayout>


    <!--菜单展开项-->
    <RelativeLayout
        android:id="@+id/rl_menu"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:visibility="gone"
        android:layout_above="@id/ll_bottomshouye"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_circle_yellow" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_spolive"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="30px"
                android:layout_marginBottom="40px"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_solive"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/solive" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="直播"
                    android:layout_marginTop="19px"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="25px"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_dynamic"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40px"
                android:layout_marginRight="30px"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_dynamic"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/dynamic" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="动态"
                    android:layout_marginTop="19px"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="25px"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <com.youchao.tingshuo.ui.widget.fragmentnavigator.BottomNavigatorView
        android:id="@+id/ll_bottomshouye"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clipToPadding="false"
        android:layout_alignParentBottom="true"
        android:layout_alignBottom="@+id/iv_center"
        />
    <ImageView
        android:id="@+id/iv_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10px"
        android:layout_alignParentBottom="true"
        android:src="@drawable/fanyi" />
</RelativeLayout>
