<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:layout_marginRight="24px"
        >
        <ImageView
            android:id="@+id/iv_circle_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:src="@drawable/user_icon"/>
        <TextView
            android:id="@+id/tv_circle_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="春风十里"
            android:layout_toRightOf="@id/iv_circle_icon"
            android:layout_marginLeft="16px"
            android:textColor="@color/colorTabSelected"
            android:textSize="30px"/>
        <TextView
            android:id="@+id/tv_circle_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09月07日"
            android:layout_below="@id/tv_circle_name"
            android:layout_alignLeft="@id/tv_circle_name"
            android:layout_marginTop="16px"
            android:textColor="@color/gray_999"
            android:textSize="24px"/>
        <TextView
            android:id="@+id/tv_guanzhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+关注"
            android:background="@drawable/text_bg_stroke_blue"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30px"
            android:textColor="@color/colorTabSelected"
            android:textSize="24px"/>
        <TextView
            android:id="@+id/tv_circle_info"
            android:layout_below="@id/tv_circle_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="i上了飞机；i拉萨解放昆仑山搭街坊凯撒了的结果反馈家公司的风格靠拢进度付款了估计是的口感JFK但是价格是快乐的覅后开始的两个接口是的价格。"
            android:layout_marginTop="20px"
            android:layout_marginLeft="24px"
            android:textColor="@color/black_222"
            android:textSize="24px"/>

        <com.youchao.tingshuo.view.NoScrollGridView
            android:id="@+id/gird_circle_img"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="24px"
            android:layout_below="@id/tv_circle_info"
            android:verticalSpacing="16px"
            android:horizontalSpacing="16px"
            android:stretchMode="columnWidth"
            android:numColumns="3"
            android:layout_marginTop="24px"
            />
    </RelativeLayout>

    <View
        android:id="@+id/view_circle"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_e5e5e5"
        android:layout_below="@id/rl_info"
        android:layout_marginTop="24px"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/view_circle"
        android:weightSum="3">
        <LinearLayout
            android:id="@+id/ll_zhuanfa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="16px"
            android:layout_marginBottom="16px"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fenxiang"
                android:layout_marginRight="12px"
                />
            <TextView
                android:id="@+id/tv_zhuanfa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/gray_999"
                android:textSize="24px"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_pinglun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="16px"
            android:layout_marginBottom="16px"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pinglun"
                android:layout_marginRight="12px"
                />
            <TextView
                android:id="@+id/tv_pinglun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="79"
                android:textColor="@color/gray_999"
                android:textSize="24px"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dianzan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="16px"
            android:layout_marginBottom="16px"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_dianzan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dianzan"
                android:layout_marginRight="12px"
                />
            <TextView
                android:id="@+id/tv_dianzan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="66"
                android:textColor="@color/gray_999"
                android:textSize="24px"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>