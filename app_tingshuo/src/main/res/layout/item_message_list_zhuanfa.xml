<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10px"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:layout_marginTop="10px">

        <ImageView
            android:id="@+id/iv_customer_touxiang"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_marginRight="24px"
            android:src="@drawable/user_icon"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_customer_touxiang"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="黑乎乎"
                android:textColor="@color/colorTabSelected"
                android:textSize="30px"
                android:gravity="center_vertical"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8px"
                android:layout_marginTop="10px"
                android:layout_marginBottom="10px"
                android:layout_marginRight="20px"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_customer_zhuanfa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="转发了"
                        android:textColor="@color/colorTabSelected"
                        android:textSize="28px"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\t你的动态        "
                        android:textColor="@color/black_222"
                        android:textSize="30px"/>

                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_customer_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昨天\t13:34"
                android:textColor="@color/gray_999"
                android:textSize="24px"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <!--<ImageView
            android:id="@+id/iv_customer_tupian"
            android:layout_width="88px"
            android:layout_height="88px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/login_logo"/>-->
        <RelativeLayout
            android:layout_width="88px"
            android:layout_height="88px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/iv_customer_tupian"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:src="@drawable/zhanwei_messag"/>
            <TextView
                android:id="@+id/iv_customer_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18px"
                android:maxLines="3"
                android:visibility="gone"
                android:background="@drawable/bg_text_xiaoxi"
                android:textColor="@color/gray_999"
                android:gravity="center"
                android:text="晒哦更好是滴哦个是哦啊过后i撒好滴哦给"/>
            <RelativeLayout
                android:id="@+id/iv_customer_video"
                android:layout_below="@id/tv_circle_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:id="@+id/item_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/zhanwei_messag"
                    />

                <ImageView
                    android:layout_width="32px"
                    android:layout_height="32px"
                    android:layout_centerInParent="true"
                    android:src="@drawable/play"/>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>