<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/snackbar_container"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_login_blue"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <ImageView
        android:id="@+id/iv_register_back"
        android:layout_width="18px"
        android:layout_height="24px"
        android:src="@drawable/left_back"
        android:layout_marginTop="66px"
        android:layout_marginLeft="36px"
        />
    <ImageView
        android:id="@+id/iv_register_icon"
        android:layout_width="188px"
        android:layout_height="188px"
        android:src="@drawable/login_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170px"/>
    <LinearLayout
        android:id="@+id/ll_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_register_icon"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:layout_marginTop="102px"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/register_rl_account"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_marginTop="10px"
            >
            <EditText
                android:id="@+id/register_et_account"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:hint="请输入手机号/昵称/邮箱"
                android:text=""
                android:background="@null"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="32px"/>

        </RelativeLayout>
        <View
            android:layout_below="@id/register_et_account"
            style="@style/match_view_white"/>
        <RelativeLayout
            android:id="@+id/register_rl_password"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_marginTop="10px"
            >
            <EditText
                android:id="@+id/register_et_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:text=""
                android:background="@null"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="32px"/>
        </RelativeLayout>
        <View
            android:layout_below="@id/register_et_account"
            style="@style/match_view_white"/>
        <RelativeLayout
            android:id="@+id/register_getyzm"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_marginTop="20px"
            android:layout_marginBottom="10px"
            >
            <com.youchao.tingshuo.ui.widget.TimeButton
                android:id="@+id/tv_getyzm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/yzm_bg_white"
                android:gravity="center"
                android:text="发送验证码"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="32px"
                android:paddingLeft="5px"
                android:paddingRight="5px"
                android:layout_alignParentRight="true"
                />
            <EditText
                android:id="@+id/et_yzm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="30px"
                android:layout_toLeftOf="@id/tv_getyzm"
                android:gravity="center_vertical"
                android:hint="请输入验证码"
                android:inputType="number"
                android:background="@null"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="30px"
                />
        </RelativeLayout>
        <View
            android:layout_below="@id/register_et_account"
            style="@style/match_view_white"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_register"
        android:layout_width="match_parent"
        android:layout_height="92px"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_btn_register"
        android:gravity="center"
        android:text="注册"
        android:textColor="@color/colorPrimary"
        android:textSize="32px"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:layout_below="@+id/ll_user"
        />
</RelativeLayout>