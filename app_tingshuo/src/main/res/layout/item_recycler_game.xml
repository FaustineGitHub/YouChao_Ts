<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_game_icon"
        android:layout_width="160px"
        android:layout_height="160px"
        android:layout_marginTop="38px"
        android:layout_marginBottom="36px"
        android:layout_marginLeft="24px"
        android:src="@drawable/user_icon"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24px"
        android:orientation="vertical"
        android:layout_toRightOf="@id/iv_game_icon">
        <TextView
            android:id="@+id/tv_game_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开心消消乐"
            android:textSize="26px"
            android:textColor="@color/black_222"/>
        <RatingBar
            android:id="@+id/ratting_bar_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            style="@style/fiveRatingBar"
            android:stepSize="1"/>
        <TextView
            android:id="@+id/tv_game_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="操作简单易懂,画面精致"
            android:textSize="24px"
            android:textColor="@color/gray_999"/>

    </LinearLayout>

    <View
        android:layout_below="@+id/iv_fans_list"
        style="@style/match_view"
        />

</RelativeLayout>