<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="160px">
    <ImageView
        android:id="@+id/iv_fans_list"
        android:layout_width="88px"
        android:layout_height="88px"
        android:layout_marginTop="38px"
        android:layout_marginBottom="36px"
        android:layout_marginLeft="24px"
        android:src="@drawable/user_icon"/>
    <TextView
        android:id="@+id/tv_fans_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YYQY"
        android:textColor="@color/colorPrimary"
        android:textSize="30px"
        android:layout_marginTop="40px"
        android:layout_marginLeft="24px"
        android:layout_toRightOf="@id/iv_fans_list"/>
    <TextView
        android:id="@+id/tv_fans_jieshao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017-03-23 12:32"
        android:textColor="@color/gray_999"
        android:textSize="24px"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxWidth="300px"
        android:layout_marginTop="16px"
        android:layout_marginLeft="24px"
        android:layout_below="@id/tv_fans_name"
        android:layout_toRightOf="@id/iv_fans_list"/>
    <RelativeLayout
        android:id="@+id/rl_fans_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="24px"
        android:paddingLeft="10px"
        android:paddingRight="10px"
        android:paddingTop="5px"
        android:paddingBottom="5px"
        android:layout_alignParentRight="true">
        <ImageView
            android:id="@+id/iv_fans_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5px"
            android:visibility="gone"
            android:src="@drawable/huxiang_icon"/>
        <TextView
            android:id="@+id/tv_fans_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+关注"
            android:layout_toRightOf="@id/iv_fans_type"
            android:textColor="@color/colorTabSelected"
            android:textSize="36px"


            />

    </RelativeLayout>

    <View
        android:layout_below="@+id/iv_fans_list"
        style="@style/match_view"
        />

</RelativeLayout>