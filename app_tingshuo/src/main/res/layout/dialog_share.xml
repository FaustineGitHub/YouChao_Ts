<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/sharedialog_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="420px"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_above="@+id/btn_cancle"
            android:background="@drawable/bg_dialog">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享到"
                android:textColor="@color/black_222"
                android:textSize="26px"
                android:layout_marginLeft="24px"
                android:layout_marginTop="24px"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="4"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_weixin"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawableTop="@drawable/share_weixin"
                    android:textSize="20px"
                    android:drawablePadding="20px"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/gray_999"
                    android:text="微信好友"/>
                <Button
                    android:id="@+id/btn_weixin_circle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawablePadding="20px"
                    android:drawableTop="@drawable/share_pengyouquan"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/gray_999"
                    android:text="微信朋友圈"/>
                <Button
                    android:id="@+id/btn_sina"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawablePadding="20px"
                    android:drawableTop="@drawable/share_sina"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/gray_999"
                    android:text="新浪微博"/>
                <Button
                    android:id="@+id/btn_qq"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawableTop="@drawable/share_qq"
                    android:textSize="20px"
                    android:drawablePadding="20px"
                    android:layout_gravity="center"
                    android:textColor="@color/gray_999"
                    android:text="QQ"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="4"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_qq_kongjian"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawableTop="@drawable/share_qq_kongjian"
                    android:textSize="20px"
                    android:drawablePadding="20px"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/gray_999"
                    android:text="QQ空间"/>

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_cancle"
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:layout_marginTop="24px"
            android:text="取消"
            android:textColor="@color/colorTabSelected"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_dialog"/>
    </RelativeLayout>

</RelativeLayout>