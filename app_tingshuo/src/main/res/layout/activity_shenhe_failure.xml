<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:id="@+id/shenhe_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/shenhe_failure_bg"/>
    <ImageView
        android:id="@+id/shenhe_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/shenhe_failure_icon"
        android:layout_marginTop="100px"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/tv_shenhe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_999"
        android:layout_centerInParent="true"
        android:lineSpacingMultiplier="1.2"
        android:gravity="center_vertical|center_horizontal"
        android:text="您的身份认证审核失败\n请重新认证..."/>
    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:layout_below="@id/tv_shenhe"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="60px"
        android:text="重新认证"
        android:textSize="28px"
        android:gravity="center"
        android:textColor="@color/gray_999"
        android:background="@drawable/bg_text_shenhe"/>



</RelativeLayout>